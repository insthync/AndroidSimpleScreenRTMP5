<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.pedro.rtmpstreamer.MainActivity"
    android:id="@+id/activity_main"
    >

    <TextView
        android:text="@string/tv_select"
        android:textSize="22sp"
        android:textColor="@color/appColor"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_select"
        />

    <Button
        android:text="@string/rtmp_streamer"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_rtmp"
        />

    <Button
        android:text="@string/rtsp_streamer"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_rtsp"
        />

    <Button
        android:text="@string/default_rtmp"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_default_rtmp"
        />

    <Button
        android:text="@string/default_rtsp"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_default_rtsp"
        />

    <Button
        android:text="@string/from_file_rtsp"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_from_file_rtsp"
        />

    <Button
        android:text="@string/screen_rtmp"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_screen_rtmp"
        />
</LinearLayout>
